<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="#FAFAFA">

    <!-- Logo and App Title -->
    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="420dp"
        android:layout_height="420dp"
        android:src="@drawable/ridersafe_logo"
        android:layout_marginBottom="8dp"
        android:contentDescription="App Logo" />


    <!-- Phone Input -->
    <EditText
        android:id="@+id/phoneEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter emergency contact number"
        android:inputType="phone"
        android:padding="12dp"
        android:background="@drawable/edittext_bg"
        android:layout_marginBottom="24dp"
        android:textSize="16sp"/>

    <!-- Buttons -->
    <Button
        android:id="@+id/simulateCrashBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🚨 SIMULATE CRASH"
        android:backgroundTint="#FFC107"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/getLocationBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📍 GET LOCATION"
        android:backgroundTint="#2196F3"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp"/>

    <!-- Location Display -->
    <TextView
        android:id="@+id/locationText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location will appear here"
        android:gravity="center"
        android:textColor="#333333"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"/>

    <!-- Send SMS -->
    <Button
        android:id="@+id/sendSmsBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🚑 SEND EMERGENCY SMS"
        android:backgroundTint="#F44336"
        android:textColor="#FFFFFF"/>

</LinearLayout>
